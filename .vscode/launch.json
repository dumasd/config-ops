    "version": "0.2.0",
    "configurations": [
        {
            "name": "ConfigOps Controller Debug",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "configops/app.py",
                "FLASK_DEBUG": "1",
                "CONFIGOPS_CONFIG_FILE": "${workspaceFolder}/config.yaml",
                "FLASK_APPLICATION_ROOT": "/configops"
            },
            "args": [
                "run",
                "--host",
                "0.0.0.0",
                "--port",
                "5000",
                "--debug",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "autoStartBrowser": false,
            "justMyCode": false
        },
        {
            "name": "ConfigOps Worker Debug",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "configops/app.py",
                "FLASK_DEBUG": "1",
                "CONFIGOPS_CONFIG_FILE": "${workspaceFolder}/config_worker.yaml",
            },
            "args": [
                "run",
                "--port",
                "5001",                
                "--debug",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "autoStartBrowser": false,
            "justMyCode": false
        }
    ]
}